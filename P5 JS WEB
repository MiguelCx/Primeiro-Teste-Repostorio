
//placar do jogo
let meusPontos = 0;
let pontosDoOponente = 0;

// variavel da bola
let xBola = 290;
let yBola = 190;
let diametropraque = 40;
let raio  = diametropraque / 2;
// movimento da bola
let velocidadeXbola = 7;
let velocidadeYbola = 7;
// raquetes
let xRaquete = 5;
let yRaquete = 150;
// comprimento da raquete
let raqueteComprimento = 12;
let raqueteAltura = 100;
//variÃ¡veis do oponente
let xRaqueteOponente = 585;
let yRaqueteOponente = 150;
let velocidadeYOponente;

let colidiu = false;

function setup() {
  createCanvas(600, 400);
}

function draw() {
  background(0);
  OlhaBolinha();
  movimento();
  BolaRaio();
  raquetes(xRaquete,yRaquete);
  movimentaMinhaRaquete();
  raquetes(xRaqueteOponente,yRaqueteOponente)
  movimentaRaqueteOponente();
  verificaColisaoRaquete(xRaquete, yRaquete);
  verificaColisaoRaquete(xRaqueteOponente, yRaqueteOponente);
  incluiPlacar();
  marcaPonto();
  bolinhaNaoFicaPresa();
}

 function OlhaBolinha(){circle(xBola, yBola, diametropraque);}

 function movimento(){ 
   xBola += velocidadeXbola;
   yBola += velocidadeYbola;}

 function BolaRaio(){ 
  if (xBola + raio > width ||
     xBola - raio < 0){
    velocidadeXbola *= -1;
   }
  if (yBola + raio > height ||
     yBola - raio < 0){
    velocidadeYbola *= -1;
  } }
  function raquetes(x,y){
    rect(x,y,raqueteComprimento, raqueteAltura);
  }
 
 function movimentaMinhaRaquete() {
    if (keyIsDown(UP_ARROW)) {
        yRaquete -= 12;
    }
    if (keyIsDown(DOWN_ARROW)) {
        yRaquete += 12;
    }
}

 function verificaColisaoRaquete() {
    if (xBola - raio < xRaquete + raqueteComprimento
        && yBola - raio < yRaquete + raqueteAltura
        && yBola + raio > yRaquete) {
        velocidadeXbola *= -1;
      raquetada.play();
    }
}

 function movimentaRaqueteOponente() {
    velocidadeYOponente = yBola - yRaqueteOponente - raqueteComprimento / 2 - 10;
    yRaqueteOponente += velocidadeYOponente
}

 function verificaColisaoRaquete(x, y) {
    colidiu = collideRectCircle(x, y, raqueteComprimento, raqueteAltura, xBola, yBola, raio);
    if (colidiu){
        velocidadeXbola *= -1;
    }
}

 function incluiPlacar() {
    fill(255);
    text(meusPontos, 278, 26);
    text(pontosDoOponente, 321, 26);
}
 function marcaPonto() {
    if (xBola > 582) {
        meusPontos += 1;
    }
    if (xBola < 19) {
        pontosDoOponente += 1;
    }
}

 function incluiPlacar() {
    stroke(255);
    textAlign(CENTER);
    textSize(16);
    fill(color(255, 140, 0));
    rect(150, 10, 40, 20);
    fill(255);
    text(meusPontos, 170, 26);
    fill(color(255, 140, 0));
    rect(450, 10, 40, 20);
    fill(255);
    text(pontosDoOponente, 470, 26);
}

 function bolinhaNaoFicaPresa(){
    if (xBola- raio < 0){
    xBola = 23
    }
}
